[Unit]
Description=InterLLM orchestrator
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=chuck
Group=chuck
WorkingDirectory=/home/chuck/code/interllm
LoadCredentialEncrypted=codex_key:/etc/credstore.encrypted/codex_key
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/bash /home/chuck/code/interllm/src/run.sh
RemainAfterExit=no

[Install]
WantedBy=multi-user.target
